@{
    ViewBag.Title = "Payment Success";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>Payment Success</title>
</head>
<body class="bg-gradient-to-br from-purple-50 to-pink-50 min-h-screen p-10">

    <div class="max-w-2xl mx-auto">

        <!-- Success Animation Container -->
        <div class="bg-white rounded-3xl shadow-2xl p-12 text-center">

            <!-- Success Icon -->
            <div class="mb-6 flex justify-center">
                <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center animate-bounce">
                    <svg class="w-12 h-12 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>

            <!-- Success Message -->
            <h1 class="text-4xl font-bold text-gray-800 mb-4">Payment Successful!</h1>
            <p class="text-gray-600 text-lg mb-8">Your payment has been processed successfully.</p>

            <!-- Payment Details -->
            <div class="bg-green-50 rounded-xl p-6 mb-8">
                <div class="flex justify-between items-center mb-4">
                    <span class="text-gray-600 font-medium">Amount Paid:</span>
                    <span class="text-3xl font-bold text-green-600">
                        @ViewBag.Currency @ViewBag.AmountPaid.ToString("N2")
                    </span>
                </div>
                <div class="flex justify-between items-center text-sm text-gray-500">
                    <span>Transaction ID:</span>
                    <span class="font-mono">@ViewBag.SessionId?.Substring(0, 20)...</span>
                </div>
            </div>

            <!-- What's Next -->
            <div class="mb-8 text-left">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">What's Next?</h3>
                <ul class="space-y-3">
                    <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-600">Your bill has been marked as paid in your account</span>
                    </li>
                    <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-600">Please login to view your updated bill status</span>
                    </li>
                    <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-gray-600">You can download your invoice from your bill history</span>
                    </li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="@Url.Action("Login_Page", "Login")"
                   class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:from-purple-700 hover:to-pink-700 transform hover:scale-105 transition-all duration-200 shadow-lg">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 102 0V4a1 1 0 011-1h9a2 2 0 012 2v11a2 2 0 01-2 2H7a2 2 0 01-2-2V3z" clip-rule="evenodd" />
                    </svg>
                    Login to View Bills
                </a>
            </div>

        </div>

    </div>

</body>
</html>
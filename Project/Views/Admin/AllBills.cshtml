@model List<Bill>

@{
    ViewBag.Title = "All Bills";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>All Bills</title>
</head>
<body class="bg-gradient-to-br from-purple-50 to-pink-50 min-h-screen p-10">

    <div class="max-w-7xl mx-auto">

        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold text-purple-700 mb-2">Billing Management</h1>
                <p class="text-gray-600">Manage all user bills and payments</p>
            </div>
            <div class="flex space-x-3">
                <form method="post" asp-action="GenerateMonthlyBills" asp-route-period="current">
                    <button type="submit" class="bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-3 rounded-lg hover:from-green-600 hover:to-green-700 transition shadow-lg flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                        </svg>
                        Generate Current Month Bills
                    </button>
                </form>
                <a href="/Admin/Dashboard" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition shadow-lg flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                    </svg>
                    Dashboard
                </a>
            </div>
        </div>

        <!-- ✅ Display Success Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center animate-fade-in">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        <!-- ✅ Display Error Messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <!-- Summary Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">

            <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-blue-500">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-500 text-sm">Total Bills</p>
                        <p class="text-2xl font-bold text-gray-800">@ViewBag.TotalBills</p>
                        <p class="text-xs text-gray-500">Paid: @ViewBag.PaidBills | Unpaid: @ViewBag.UnpaidBills</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-500 text-sm">Paid Amount</p>
                        <p class="text-2xl font-bold text-green-600">Rs @ViewBag.PaidAmount.ToString("N2")</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-red-500">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-500 text-sm">Unpaid Amount</p>
                        <p class="text-2xl font-bold text-red-600">Rs @ViewBag.UnpaidAmount.ToString("N2")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bills Table -->
        @if (Model.Count == 0)
        {
            <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-6 py-8 rounded-lg flex flex-col items-center justify-center">
                <svg class="w-16 h-16 mb-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                    <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                </svg>
                <p class="font-semibold text-lg mb-2">No bills found</p>
                <p class="text-sm mb-4">Generate monthly bills to see them here</p>
                <form method="post" asp-action="GenerateMonthlyBills" class="inline">
                    <button type="submit" class="bg-yellow-600 text-white px-6 py-2 rounded-lg hover:bg-yellow-700 transition">
                        Generate Bills Now
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead class="bg-gradient-to-r from-purple-600 to-pink-600 text-white">
                            <tr>
                                <th class="px-6 py-4 text-left font-semibold">User</th>
                                <th class="px-6 py-4 text-left font-semibold">Date</th>
                                <th class="px-6 py-4 text-right font-semibold">Amount</th>
                                <th class="px-6 py-4 text-center font-semibold">Status</th>
                                <th class="px-6 py-4 text-center font-semibold">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bill in Model)
                            {
                                <tr class="border-b hover:bg-purple-50 transition" data-bill-id="@bill.Id">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                                @bill.User.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <p class="font-medium text-gray-800">@bill.User.FullName</p>
                                                <p class="text-xs text-gray-500">@bill.User.Email</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-gray-600">
                                        @bill.Date.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <span class="font-semibold text-gray-800">Rs @bill.Amount.ToString("N2")</span>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        @if (bill.Paid)
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 status-badge">
                                                ✓ Paid
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800 status-badge">
                                                ✗ Unpaid
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex justify-center space-x-2">
                                            @if (!bill.Paid)
                                            {
                                                <button onclick="markPaid(@bill.Id)"
                                                        class="bg-green-500 text-white px-3 py-1 rounded-lg hover:bg-green-600 transition text-sm flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                                    </svg>
                                                    Mark Paid
                                                </button>
                                            }
                                            else
                                            {
                                                <button onclick="markUnpaid(@bill.Id)"
                                                        class="bg-orange-500 text-white px-3 py-1 rounded-lg hover:bg-orange-600 transition text-sm flex items-center">
                                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                                    </svg>
                                                    Mark Unpaid
                                                </button>
                                            }
                                            <button onclick="deleteBill(@bill.Id)"
                                                    class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600 transition text-sm flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                                                </svg>
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

    </div>

    <!-- ✅ jQuery AJAX Functions -->
    <script>
        function markPaid(billId) {
            if (!confirm('Mark this bill as paid?')) return;

            $.ajax({
                url: '/Admin/MarkPaid',
                type: 'POST',
                data: { billId: billId },
                success: function(response) {
                    if (response.success) {
                        showNotification('Success', response.message, 'success');
                        updateBillStatus(billId, true);
                    } else {
                        showNotification('Error', response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Error', 'Failed to update bill status', 'error');
                }
            });
        }

        function markUnpaid(billId) {
            if (!confirm('Mark this bill as unpaid?')) return;

            $.ajax({
                url: '/Admin/MarkUnpaid',
                type: 'POST',
                data: { billId: billId },
                success: function(response) {
                    if (response.success) {
                        showNotification('Success', response.message, 'success');
                        updateBillStatus(billId, false);
                    } else {
                        showNotification('Error', response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Error', 'Failed to update bill status', 'error');
                }
            });
        }

        function deleteBill(billId) {
            if (!confirm('Are you sure you want to delete this bill? This action cannot be undone.')) return;

            $.ajax({
                url: '/Admin/DeleteBill',
                type: 'POST',
                data: { billId: billId },
                success: function(response) {
                    if (response.success) {
                        showNotification('Success', response.message, 'success');
                        $('tr[data-bill-id="' + billId + '"]').fadeOut(300, function() {
                            $(this).remove();
                        });
                    } else {
                        showNotification('Error', response.message, 'error');
                    }
                },
                error: function() {
                    showNotification('Error', 'Failed to delete bill', 'error');
                }
            });
        }

        function updateBillStatus(billId, isPaid) {
            var row = $('tr[data-bill-id="' + billId + '"]');
            var badge = row.find('.status-badge');
            var actionsCell = row.find('td:last-child > div');

            if (isPaid) {
                badge.removeClass('bg-red-100 text-red-800').addClass('bg-green-100 text-green-800');
                badge.html('✓ Paid');
                actionsCell.html(`
                    <button onclick="markUnpaid(${billId})"
                           class="bg-orange-500 text-white px-3 py-1 rounded-lg hover:bg-orange-600 transition text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        Mark Unpaid
                    </button>
                    <button onclick="deleteBill(${billId})"
                           class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600 transition text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        Delete
                    </button>
                `);
            } else {
                badge.removeClass('bg-green-100 text-green-800').addClass('bg-red-100 text-red-800');
                badge.html('✗ Unpaid');
                actionsCell.html(`
                    <button onclick="markPaid(${billId})"
                           class="bg-green-500 text-white px-3 py-1 rounded-lg hover:bg-green-600 transition text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Mark Paid
                    </button>
                    <button onclick="deleteBill(${billId})"
                           class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600 transition text-sm flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        Delete
                    </button>
                `);
            }
        }

        function showNotification(title, message, type) {
            var bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
            var notification = $('<div class="fixed top-4 right-4 ' + bgColor + ' text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-slide-in">' +
                '<p class="font-semibold">' + title + '</p>' +
                '<p class="text-sm">' + message + '</p>' +
                '</div>');

            $('body').append(notification);

            setTimeout(function() {
                notification.fadeOut(function() {
                    $(this).remove();
                });
            }, 3000);
        }
    </script>

    <style>
        @@keyframes slide-in {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @@keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-slide-in {
            animation: slide-in 0.3s ease-out;
        }

        .animate-fade-in {
            animation: fade-in 0.3s ease-out;
        }
    </style>

</body>
</html>
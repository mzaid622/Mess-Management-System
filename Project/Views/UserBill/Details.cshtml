@model Bill

@{
    ViewBag.Title = "Bill Details";
    var attendances = ViewBag.Attendances as List<Attendance>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>Bill Details</title>
</head>
<body class="bg-gradient-to-br from-purple-50 to-pink-50 min-h-screen p-10">

    <div class="max-w-4xl mx-auto">

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-4xl font-bold text-purple-700 mb-2">Bill Details</h1>
            <p class="text-gray-600">Detailed breakdown of your monthly bill</p>
        </div>

        <!-- Bill Summary Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Invoice #@Model.Id</h2>
                    <p class="text-gray-600">Bill Period: @Model.Date.ToString("MMMM yyyy")</p>
                    <p class="text-gray-600">Generated: @Model.Date.ToString("MMM dd, yyyy")</p>
                </div>
                <div class="text-right">
                    @if (Model.Paid)
                    {
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            PAID
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-red-100 text-red-800">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                            </svg>
                            UNPAID
                        </span>
                    }
                </div>
            </div>

            <hr class="my-6">

            <!-- User Info -->
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-gray-700 mb-2">Bill To:</h3>
                <p class="text-gray-800 font-medium">@Model.User.FullName</p>
                <p class="text-gray-600">@Model.User.Email</p>
            </div>

            <!-- Summary Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-yellow-50 p-4 rounded-lg">
                    <p class="text-yellow-700 text-sm font-medium mb-1">Food Items</p>
                    <p class="text-2xl font-bold text-yellow-800">@ViewBag.FoodCount</p>
                    <p class="text-sm text-yellow-600">Rs @ViewBag.FoodTotal.ToString("N2")</p>
                </div>
                <div class="bg-green-50 p-4 rounded-lg">
                    <p class="text-green-700 text-sm font-medium mb-1">Drink Items</p>
                    <p class="text-2xl font-bold text-green-800">@ViewBag.DrinkCount</p>
                    <p class="text-sm text-green-600">Rs @ViewBag.DrinkTotal.ToString("N2")</p>
                </div>
                <div class="bg-purple-50 p-4 rounded-lg">
                    <p class="text-purple-700 text-sm font-medium mb-1">Total Amount</p>
                    <p class="text-2xl font-bold text-purple-800">Rs @Model.Amount.ToString("N2")</p>
                </div>
            </div>
        </div>

        <!-- Attendance Breakdown -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Attendance Breakdown</h3>

            @if (attendances != null && attendances.Count > 0)
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead class="bg-gradient-to-r from-purple-600 to-pink-600 text-white">
                            <tr>
                                <th class="px-4 py-3 text-left font-semibold">Date</th>
                                <th class="px-4 py-3 text-left font-semibold">Item</th>
                                <th class="px-4 py-3 text-center font-semibold">Type</th>
                                <th class="px-4 py-3 text-right font-semibold">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in attendances)
                            {
                                <tr class="border-b hover:bg-purple-50 transition">
                                    <td class="px-4 py-3 text-gray-600">
                                        @attendance.Menu.Date.ToString("MMM dd")
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 bg-gradient-to-br from-purple-400 to-pink-400 rounded-lg flex items-center justify-center text-white mr-2">
                                                @if (attendance.Menu.IsFood)
                                                {
                                                    <span class="text-sm">🍽️</span>
                                                }
                                                else
                                                {
                                                    <span class="text-sm">☕</span>
                                                }
                                            </div>
                                            <span class="font-medium text-gray-800">@attendance.Menu.Name</span>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        @if (attendance.Menu.IsFood)
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
                                                Food
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                                                Drink
                                            </span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-right font-semibold text-gray-800">
                                        Rs @attendance.Menu.Price.ToString("N2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="3" class="px-4 py-4 text-right font-bold text-gray-800">
                                    Total Amount:
                                </td>
                                <td class="px-4 py-4 text-right font-bold text-purple-700 text-lg">
                                    Rs @Model.Amount.ToString("N2")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-6 py-4 rounded-lg">
                    <p class="font-semibold">No attendance records found for this billing period.</p>
                </div>
            }
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-wrap gap-4 justify-center">
            @if (!Model.Paid)
            {
                <form method="post" asp-controller="Payment" asp-action="CreateCheckoutSession" asp-route-billId="@Model.Id">
                    <button type="submit"
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-lg hover:from-green-600 hover:to-green-700 transform hover:scale-105 transition-all duration-200 shadow-lg">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                            <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                        </svg>
                        Pay Now with Stripe
                    </button>
                </form>
            }

            <a href="@Url.Action("DownloadInvoice", new { id = Model.Id })"
               class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:from-purple-700 hover:to-pink-700 transform hover:scale-105 transition-all duration-200 shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Download PDF Invoice
            </a>

            <a href="@Url.Action("Index")"
               class="inline-flex items-center px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transform hover:scale-105 transition-all duration-200 shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Back to Bill History
            </a>
        </div>

    </div>

</body>
</html>
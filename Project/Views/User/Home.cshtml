@{
    ViewBag.Title = "User Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>User Home</title>
</head>
<body class="bg-purple-100 min-h-screen p-10">
    <h1 class="text-3xl font-bold text-purple-700 mb-6">Welcome, @ViewBag.Username</h1>

    <p class="text-gray-700">Email: @ViewBag.Email</p>
    <p class="text-gray-700">Role: @ViewBag.Role</p>

    <a href="@Url.Action("Logout", "Login")"
       class="mt-4 inline-block bg-purple-500 text-white px-4 py-2 rounded-lg hover:opacity-90 transition">
        Logout
    </a>
</body>
</html>
